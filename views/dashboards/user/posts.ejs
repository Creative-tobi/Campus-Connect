<%- include('../../partials/header') %>

<div class="container mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold">Club Posts</h1>
    <p class="text-gray-600">Posts from clubs you're a member of</p>
  </div>

  <div id="postsContainer" class="space-y-6">
    <!-- Posts will be loaded here -->
  </div>
</div>

<script>
  // Load posts on page load
  document.addEventListener("DOMContentLoaded", loadPosts);

  async function loadPosts() {
    const token = localStorage.getItem("token");
    try {
      const response = await fetch("/api/users/posts?format=json", {
        headers: {
          Authorization: `Bearer ${token}`,
          Accept: "application/json",
        },
      });

      if (response.ok) {
        const data = await response.json();
        displayPosts(data.posts);
      } else {
        console.error("Failed to load posts");
      }
    } catch (error) {
      console.error("Error loading posts:", error);
    }
  }

  function displayPosts(posts) {
    const container = document.getElementById("postsContainer");

    if (!posts || posts.length === 0) {
      container.innerHTML =
        '<div class="bg-white p-12 text-center rounded-lg border"><i class="fas fa-newspaper text-4xl text-gray-300 mb-4"></i><p>No posts available from your clubs.</p></div>';
      return;
    }

    container.innerHTML = posts
      .map(
        (post) => `
            <div class="bg-white rounded-lg shadow border overflow-hidden">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <img src="${
                              post.author.profilePicture ||
                              "https://via.placeholder.com/40"
                            }" class="w-10 h-10 rounded-full">
                            <div>
                                <h3 class="font-semibold">${
                                  post.author.firstName
                                } ${post.author.lastName}</h3>
                                <p class="text-sm text-gray-500">${new Date(
                                  post.createdAt
                                ).toLocaleDateString()}</p>
                            </div>
                        </div>
                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">${
                          post.club.name
                        }</span>
                    </div>
                    <h2 class="text-xl font-bold mb-2">${post.title}</h2>
                    <p class="text-gray-700 mb-4">${post.content}</p>
                    ${
                      post.media
                        ? `<img src="${post.media}" class="w-full rounded-lg mb-4 max-h-96 object-cover">`
                        : ""
                    }
                </div>
            </div>
        `
      )
      .join("");
  }
</script>

