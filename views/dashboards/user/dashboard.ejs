<%- include('../../partials/header') %>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="md:col-span-1">
        <div class="bg-white p-6 rounded-lg shadow-sm border text-center">
            
            <% if (user.profilePicture) { %>
                <img src="<%= user.profilePicture %>" class="w-24 h-24 rounded-full mx-auto mb-4 object-cover border border-gray-200">
            <% } else { %>
                <div class="w-24 h-24 rounded-full mx-auto mb-4 bg-blue-600 flex items-center justify-center text-white text-4xl font-bold shadow-sm">
                    <%= user.firstName.charAt(0).toUpperCase() %>
                </div>
            <% } %>

            <h3 class="font-bold text-lg"><%= user.firstName %> <%= user.lastName %></h3>
            <p class="text-gray-500 text-sm capitalize"><%= user.role.replace('_', ' ') %></p>
            <p class="text-gray-400 text-xs mt-1"><%= user.faculty %></p>
            
            <% if(user.role === 'club_owner') { %>
                <hr class="my-4">
                <button onclick="document.getElementById('createClubModal').classList.remove('hidden')" class="w-full bg-blue-600 text-white text-sm py-2 rounded mb-2 hover:bg-blue-700 transition">Create New Club</button>
                <a href="/api/clubs/my" class="token-link block w-full bg-gray-100 text-gray-700 text-sm py-2 rounded hover:bg-gray-200">Manage My Clubs</a>
            <% } else { %>
                <hr class="my-4">
                <button onclick="document.getElementById('createClubModal').classList.remove('hidden')" class="w-full bg-green-600 text-white text-sm py-2 rounded mb-2 hover:bg-green-700 transition">Create a Club</button>
            <% } %>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border mt-6">
            <h4 class="font-bold text-gray-700 mb-3">Your Clubs</h4>
            <% if (locals.joinedClubs && joinedClubs.length > 0) { %>
                <ul class="space-y-2">
                    <% joinedClubs.forEach(club => { %>
                        <li>
                            <a href="/api/clubs/<%= club._id %>" class="token-link flex items-center text-sm text-gray-600 hover:text-blue-600">
                                <% if (club.logo) { %>
                                    <img src="<%= club.logo %>" class="w-6 h-6 rounded mr-2 object-cover">
                                <% } else { %>
                                    <div class="w-6 h-6 rounded mr-2 bg-blue-100 flex items-center justify-center text-blue-600 text-xs font-bold">
                                        <%= club.name.charAt(0) %>
                                    </div>
                                <% } %>
                                <%= club.name %>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-sm text-gray-400">You haven't joined any clubs yet.</p>
                <a href="/clubs" class="token-link text-xs text-blue-500 mt-2 block hover:underline">Explore Clubs</a>
            <% } %>
        </div>
    </div>

    <div class="md:col-span-3">
        <div class="bg-white p-6 rounded-lg shadow-sm border mb-6 flex justify-between items-center">
            <div>
                <h2 class="text-xl font-bold mb-1">Welcome, <%= user.firstName %>!</h2>
                <p class="text-gray-600 text-sm">Connect with your campus community.</p>
            </div>
            <button
                onclick="document.getElementById('createClubModal').classList.remove('hidden')"
                class="bg-blue-600 text-white px-4 py-2 rounded-md shadow hover:bg-blue-700 transition text-sm flex items-center">
                <i class="fas fa-plus mr-2"></i> Create Club
            </button>
        </div>

        <h3 class="text-lg font-bold text-gray-800 mb-4 ml-1">Latest Updates</h3>
        <div id="posts-container" class="space-y-6">
            <div class="text-center py-12">
                <i class="fas fa-spinner fa-spin text-2xl text-blue-500"></i>
                <p class="text-gray-500 mt-2">Loading your feed...</p>
            </div>
        </div>
    </div>
</div>

<div id="createClubModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 backdrop-blur-sm">
  <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md transform transition-all">
    <h3 class="text-2xl font-bold mb-6 text-gray-800">Create New Club</h3>
    <form id="createClubForm">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Club Name</label>
        <input type="text" name="name" placeholder="e.g. Robotics Club" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" required />
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
        <select name="category" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" required>
          <option value="Academic">Academic</option>
          <option value="Sports">Sports</option>
          <option value="Social">Social</option>
          <option value="Tech">Tech</option>
          <option value="Arts">Arts & Culture</option>
        </select>
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <textarea name="description" rows="3" placeholder="What is this club about?" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" required></textarea>
      </div>

      <div class="flex justify-end space-x-3">
        <button type="button" onclick="document.getElementById('createClubModal').classList.add('hidden')" class="px-5 py-2.5 text-gray-600 hover:bg-gray-100 rounded-lg transition">Cancel</button>
        <button type="submit" class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition">Create Club</button>
      </div>
    </form>
  </div>
</div>

<script>
    // 1. Create Club Logic
    document.getElementById("createClubForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const token = localStorage.getItem("token");
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      try {
        const res = await fetch("/api/clubs/create", {
          method: "POST",
          headers: {
            Authorization: `Bearer ${token}`,
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        if (res.ok) {
          alert("Club created! Waiting for admin approval.");
          window.location.reload();
        } else {
          const errorData = await res.json();
          alert("Error creating club: " + (errorData.message || errorData.error || "Unknown error"));
        }
      } catch (err) {
        console.error(err);
        alert("Network error occurred");
      }
    });

    // 2. Fetch Feed Logic
    document.addEventListener("DOMContentLoaded", async () => {
        const token = localStorage.getItem('token');
        if(!token) return;

        // Check if user has joined clubs (passed from server)
        const hasJoinedClubs = <%= (locals.joinedClubs && joinedClubs.length > 0) ? 'true' : 'false' %>;
        const container = document.getElementById('posts-container');

        // CASE 1: NOT JOINED ANY CLUBS
        if (!hasJoinedClubs) {
            container.innerHTML = `
                <div class="text-center py-12 bg-white rounded-lg border border-dashed border-gray-300">
                    <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-users text-3xl text-blue-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Your feed is empty</h3>
                    <p class="text-gray-500 mt-2 mb-6">Join a club to view posts here.</p>
                    <a href="/clubs?token=${token}" class="inline-block bg-blue-600 text-white px-6 py-2.5 rounded-lg hover:bg-blue-700 transition font-medium shadow-sm">
                        Explore Clubs
                    </a>
                </div>`;
            return;
        }

        // CASE 2: JOINED CLUBS -> FETCH POSTS
        try {
            const res = await fetch('/api/users/posts', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            const data = await res.json();
            
            container.innerHTML = '';

            if (data.posts && data.posts.length > 0) {
                const user = JSON.parse(localStorage.getItem('user'));
                data.posts.forEach(post => {
                    // Author Image Fallback
                    let authorImg = post.author.profilePicture 
                        ? `<img src="${post.author.profilePicture}" class="w-10 h-10 rounded-full mr-3 object-cover border border-gray-200">`
                        : `<div class="w-10 h-10 rounded-full mr-3 bg-blue-100 flex items-center justify-center text-blue-600 font-bold border border-blue-200 text-sm">${post.author.firstName.charAt(0)}</div>`;

                    container.innerHTML += `
                        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition duration-200">
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex items-center">
                                    ${authorImg}
                                    <div>
                                        <h4 class="font-bold text-sm text-gray-900">${post.author.firstName} ${post.author.lastName}</h4>
                                        <p class="text-xs text-gray-500 mt-0.5">
                                            Posted in <span class="font-medium text-blue-600">${post.club ? post.club.name : 'Unknown Club'}</span> 
                                            <span class="mx-1">â€¢</span> 
                                            ${new Date(post.createdAt).toLocaleDateString()}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <h3 class="font-bold text-lg mb-2 text-gray-900">${post.title}</h3>
                            <p class="text-gray-700 mb-4 whitespace-pre-line text-sm leading-relaxed">${post.content}</p>
                            ${post.media ? `<div class="rounded-lg overflow-hidden border bg-gray-50"><img src="${post.media}" class="w-full max-h-96 object-contain"></div>` : ''}
                        </div>
                    `;
                });
            } else {
                // User joined clubs but no posts found
                container.innerHTML = `
                    <div class="text-center text-gray-500 py-12 bg-white rounded-lg border border-dashed border-gray-300">
                        <i class="fas fa-newspaper text-4xl mb-4 text-gray-300"></i>
                        <h3 class="text-lg font-medium text-gray-900">No posts yet</h3>
                        <p class="text-gray-500 text-sm mt-1">Your clubs haven't posted any updates recently.</p>
                    </div>`;
            }
        } catch (error) {
            console.error(error);
            // Fallback for errors (Clean UI)
            container.innerHTML = `
                <div class="text-center text-gray-500 py-12 bg-white rounded-lg border border-dashed">
                    <p class="text-gray-600">No updates available right now.</p>
                    <button onclick="window.location.reload()" class="text-blue-600 text-sm mt-2 hover:underline">Refresh Feed</button>
                </div>`;
        }
    });
</script>

<%- include('../../partials/footer') %>