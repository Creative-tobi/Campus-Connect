<%- include('../../partials/header') %>

<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">My Clubs</h1>
    <div class="flex space-x-2">
      <% if (locals.clubs && clubs.length > 0) { %>
      <div class="relative">
        <button
          onclick="togglePostDropdown(event)"
          class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700 inline-flex items-center transition">
          <i class="fas fa-edit mr-2"></i> Create Post
          <i class="fas fa-chevron-down ml-2"></i>
        </button>

        <div
          id="postDropdown"
          class="absolute right-0 mt-2 w-64 bg-white rounded-md shadow-lg z-20 hidden border border-gray-100">
          <div class="py-1">
            <div class="px-4 py-2 text-xs text-gray-400 border-b">
              Select a club to post in:
            </div>
            <% clubs.forEach(club => { %>
            <a
              href="/api/users/create-post?clubId=<%= club._id %>"
              class="token-link block px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 transition">
              <i class="fas fa-pen-nib mr-2 opacity-50"></i> <%= club.name %>
            </a>
            <% }) %>
          </div>
        </div>
      </div>
      <% } %>

      <button
        onclick="document.getElementById('createClubModal').classList.remove('hidden')"
        class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
        <i class="fas fa-plus mr-1"></i> Create Club
      </button>
    </div>
  </div>

  <% if (locals.clubs && clubs.length > 0) { %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% clubs.forEach(club => { %>
    <div
      class="bg-white rounded-lg shadow border overflow-hidden hover:shadow-md transition">
      <% if (club.banner) { %>
      <img src="<%= club.banner %>" class="w-full h-32 object-cover" />
      <% } else { %>
      <div
        class="w-full h-32 bg-blue-500 flex items-center justify-center text-white font-bold text-2xl">
        <%= club.name.charAt(0).toUpperCase() %>
      </div>
      <% } %>
      <div class="p-4">
        <div class="flex items-center -mt-10 mb-3">
          <% if (club.logo) { %>
          <img
            src="<%= club.logo %>"
            class="w-16 h-16 rounded-full border-4 border-white bg-white object-cover shadow-sm" />
          <% } else { %>
          <div
            class="w-16 h-16 rounded-full border-4 border-white bg-white bg-blue-500 flex items-center justify-center text-white font-bold shadow-sm">
            <%= club.name.charAt(0).toUpperCase() %>
          </div>
          <% } %>
        </div>
        <h3 class="font-bold text-xl text-gray-800"><%= club.name %></h3>
        <p class="text-sm text-gray-500 mb-2"><%= club.category %></p>
        <span
          class="inline-block px-2 py-1 text-xs font-semibold rounded <%= club.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= club.status %>
        </span>
        <div class="mt-4 flex space-x-2">
          <a
            href="/api/clubs/<%= club._id %>"
            class="token-link flex-1 text-center bg-gray-100 hover:bg-gray-200 text-gray-800 py-2 rounded transition"
            >View Dashboard</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div
    class="bg-white p-12 text-center rounded-lg border border-dashed border-gray-300">
    <div class="inline-block p-4 rounded-full bg-gray-50 mb-4">
      <i class="fas fa-users text-4xl text-gray-300"></i>
    </div>
    <h3 class="text-lg font-medium text-gray-900">No clubs found</h3>
    <p class="text-gray-500 mb-6">
      You don't own any clubs yet. Get started by creating one!
    </p>
  </div>
  <% } %>
</div>

<div
  id="createClubModal"
  class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 backdrop-blur-sm">
  <div
    class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md transform transition-all">
    <h3 class="text-2xl font-bold mb-6 text-gray-800">Create New Club</h3>
    <form id="createClubForm">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1"
          >Club Name</label
        >
        <input
          type="text"
          name="name"
          placeholder="e.g. Robotics Club"
          class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"
          required />
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1"
          >Category</label
        >
        <select
          name="category"
          class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"
          required>
          <option value="Academic">Academic</option>
          <option value="Sports">Sports</option>
          <option value="Social">Social</option>
          <option value="Tech">Tech</option>
          <option value="Arts">Arts & Culture</option>
        </select>
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-1"
          >Description</label
        >
        <textarea
          name="description"
          rows="3"
          placeholder="What is this club about?"
          class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"
          required></textarea>
      </div>

      <div class="flex justify-end space-x-3">
        <button
          type="button"
          onclick="document.getElementById('createClubModal').classList.add('hidden')"
          class="px-5 py-2.5 text-gray-600 hover:bg-gray-100 rounded-lg transition">
          Cancel
        </button>
        <button
          type="submit"
          class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition">
          Create Club
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  function togglePostDropdown(event) {
    event.stopPropagation(); // Prevent the click from immediately closing the dropdown via the document listener
    const dropdown = document.getElementById("postDropdown");
    dropdown.classList.toggle("hidden");
  }

  // Close dropdown when clicking outside
  document.addEventListener("click", function (event) {
    const dropdown = document.getElementById("postDropdown");
    const button = event.target.closest("button");

    // Check if the click was outside the dropdown and outside the toggle button
    if (!dropdown.contains(event.target)) {
      dropdown.classList.add("hidden");
    }
  });

  document
    .getElementById("createClubForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const token = localStorage.getItem("token");
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      try {
        const res = await fetch("/api/clubs/create", {
          method: "POST",
          headers: {
            Authorization: `Bearer ${token}`,
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        if (res.ok) {
          window.location.reload();
        } else {
          const errorData = await res.json();
          alert(
            "Error creating club: " + (errorData.message || "Unknown error")
          );
        }
      } catch (err) {
        console.error(err);
        alert("Network error occurred");
      }
    });
</script>

<%- include('../../partials/footer') %>
