<style>
    /* Custom Animation for Background Blobs */
    @keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    .animation-delay-4000 {
        animation-delay: 4s;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const token = localStorage.getItem('token');
        const role = localStorage.getItem('role');
        
        if (token) {
            // Determine dashboard link based on role
            let dashboardLink = '/api/users/dashboard';
            if (role === 'admin') dashboardLink = '/api/admin/dashboard';
            
            // Check if user is club_owner, they also use the standard dashboard but might have special permissions
            // (Your backend handles the view rendering logic for dashboard/user/dashboard)

            // Update Main CTA
            const primaryContainer = document.getElementById('hero-cta-primary');
            if (primaryContainer) {
                primaryContainer.innerHTML = `
                    <a href="${dashboardLink}" class="token-link flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition transform hover:-translate-y-1 shadow-lg">
                        Go to Dashboard <i class="fas fa-tachometer-alt ml-2"></i>
                    </a>
                `;
            }

            // Append token to secondary link if needed
            const secondaryLink = document.querySelector('#hero-cta-secondary a');
            if (secondaryLink) {
                secondaryLink.classList.add('token-link');
                const separator = secondaryLink.href.includes('?') ? '&' : '?';
                secondaryLink.href = `${secondaryLink.href}${separator}token=${token}`;
            }
        }
    });
</script>

