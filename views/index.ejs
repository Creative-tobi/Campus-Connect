       onerror="this.onerror=null;this.src='https://via.placeholder.com/120x48?text=Node.js';">

  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d5/Tailwind_CSS_Logo.svg/120px-Tailwind_CSS_Logo.svg.png"
       alt="Tailwind CSS" class="h-12 mx-auto opacity-70 hover:opacity-100 transition"
