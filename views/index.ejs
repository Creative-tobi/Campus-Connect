  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3d/CSS.3.svg/120px-CSS.3.svg.png"
       alt="CSS3" class="h-12 mx-auto opacity-70 hover:opacity-100 transition"
       onerror="this.onerror=null;this.src='https://via.placeholder.com/120x48?text=CSS3';">
</div>

        </div>
      </div>

      <!--  Footer -->
      <footer class="bg-gray-900 text-gray-300">
        <div class="max-w-7xl mx-auto py-12 px-6 lg:px-8 grid grid-cols-1 md:grid-cols-4 gap-10">
          
          <!-- Brand -->
          <div>
            <h3 class="text-white text-2xl font-bold mb-4">Campus Connect</h3>
            <p class="text-gray-400">
              Empowering students and lecturers to connect, collaborate, and engage through a vibrant campus community.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-white text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/" class="hover:text-blue-400 transition">Home</a></li>
              <li><a href="/about" class="hover:text-blue-400 transition">About</a></li>
              <li><a href="/clubs" class="hover:text-blue-400 transition">Clubs</a></li>
              <li><a href="/events" class="hover:text-blue-400 transition">Events</a></li>
              <li><a href="/contact" class="hover:text-blue-400 transition">Contact</a></li>
            </ul>
          </div>

          <!-- Support -->
          <div>
            <h4 class="text-white text-lg font-semibold mb-4">Support</h4>
            <ul class="space-y-2">
              <li><a href="/faq" class="hover:text-blue-400 transition">FAQ</a></li>
              <li><a href="/help" class="hover:text-blue-400 transition">Help Center</a></li>
              <li><a href="/terms" class="hover:text-blue-400 transition">Terms & Conditions</a></li>
              <li><a href="/privacy" class="hover:text-blue-400 transition">Privacy Policy</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h4 class="text-white text-lg font-semibold mb-4">Contact Us</h4>
            <p>Email: <a href="mailto:support@campusconnect.com" class="text-blue-400 hover:underline">everyonegamil.com</a></p>
            <p class="mt-2">Phone: +234 800 000 0000</p>
